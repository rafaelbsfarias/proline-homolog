# Configurações do Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Chave de serviço (para operações administrativas - MANTENHA EM SEGREDO)
NEXT_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
# Alternativa (compatibilidade)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Configurações de URL para produção
VITE_PRODUCTION_URL=https://your-production-domain.com
PRODUCTION_URL=https://your-production-domain.com

# Configurações de email (se necessário)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@your-domain.com

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
# Enable or disable application-wide logging.
# Set to 'true' to activate logging, primarily for development and debugging.
# It is recommended to keep this 'false' in production unless actively debugging.
NEXT_PUBLIC_ENABLE_LOGGING=false