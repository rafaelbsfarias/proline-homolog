{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@collections": ["./modules/collections"],
      "@collections/*": ["./modules/collections/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "app/**/*.{ts,tsx}",
    "src/**/*.{ts,tsx}",
    "modules/**/*.{ts,tsx}",
    "lib/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
